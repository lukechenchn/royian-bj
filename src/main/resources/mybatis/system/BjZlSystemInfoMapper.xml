<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.system.info.mapper.BjZlSystemInfoMapper">
    
    <resultMap type="BjZlSystemInfo" id="BjZlSystemInfoResult">
        <result property="id"    column="id"    />
        <result property="status"    column="status"    />
        <result property="weight"    column="weight"    />
        <result property="speed"    column="speed"    />
        <result property="num"    column="num"    />
    </resultMap>

    <sql id="selectBjZlSystemInfoVo">
        select id, status, weight, speed, num from bj_zl_system_info
    </sql>

    <select id="selectBjZlSystemInfoList" parameterType="BjZlSystemInfo" resultMap="BjZlSystemInfoResult">
        <include refid="selectBjZlSystemInfoVo"/>
        <where>  
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="weight != null "> and weight = #{weight}</if>
            <if test="speed != null "> and speed = #{speed}</if>
            <if test="num != null "> and num = #{num}</if>
        </where>
    </select>
    
    <select id="selectBjZlSystemInfoById" parameterType="Long" resultMap="BjZlSystemInfoResult">
        <include refid="selectBjZlSystemInfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertBjZlSystemInfo" parameterType="BjZlSystemInfo" useGeneratedKeys="true" keyProperty="id">
        insert into bj_zl_system_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="status != null">status,</if>
            <if test="weight != null">weight,</if>
            <if test="speed != null">speed,</if>
            <if test="num != null">num,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="status != null">#{status},</if>
            <if test="weight != null">#{weight},</if>
            <if test="speed != null">#{speed},</if>
            <if test="num != null">#{num},</if>
         </trim>
    </insert>

    <update id="updateBjZlSystemInfo" parameterType="BjZlSystemInfo">
        update bj_zl_system_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="status != null">status = #{status},</if>
            <if test="weight != null">weight = #{weight},</if>
            <if test="speed != null">speed = #{speed},</if>
            <if test="num != null">num = #{num},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBjZlSystemInfoById" parameterType="Long">
        delete from bj_zl_system_info where id = #{id}
    </delete>

    <delete id="deleteBjZlSystemInfoByIds" parameterType="String">
        delete from bj_zl_system_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>